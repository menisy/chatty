<body>
  <div class="chat-wrapper shadow"> 
    <div class="slider shadow">
      <div class="slider-toggle"> Foursquare</div>
    </div>
    <table>
      <tr>
        <td>
          <div class="chat main">

          </div>
        </td>
        <td>
          <div class="users">
            <% @users.each do |user| %>
              <div class="user" id="<%= user.id %>">
                <%= user.name %>
              </div>
            <% end %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <input type="text" id="new_msg">
        </td>
        <td>
          <input type="button" id="send_msg" class="btn btn-primary" value="send">
        </td>
      </tr>
    </table>
    <div class="rel">
      <div class="notify shadow"> koko betengana bebe</div>
    </div>
    <%= subscribe "/chat/main" %>
    <br>
    <%= link_to "Disconnect", chats_logout_path, class: "btn btn-danger", method: :post, remote: true %>
    <%= pre %>
  </div>
  <script type="text/javascript">
  $(".user").each(function(i){
    bg_color = Math.floor((Math.random()*12500670)+6579300).toString(16);
    bg_color = ("000000" + bg_color).slice(-6);
    border_color = parseInt(bg_color, 16) - parseInt('000015', 16);
    $(this).css("background-color","#"+bg_color);
    $(this).css("border","1px solid #"+border_color);
  });
  </script>
</body>